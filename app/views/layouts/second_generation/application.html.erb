<!doctype html lang="en"> 
<head> 
  	<title><%= @page_title + " - " if @page_title -%><%= current_site.title -%></title>
	
	<link rel="stylesheet" href="/stylesheets/external.css" type="text/css">
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script> 
	<script type="text/javascript" src="javascripts/jquery.cycle.all.min.js"></script> 
	<script type="text/javascript">
	$(function()
	{
	        var self = this;
	        this.status = 'collapsed';

	        $('a.all-features').click(function()
	        {
	                if(!$('#features-wrapper').is(':animated'))
	                {
	                        $('#features-wrapper')
	                                .animate(
	                                {
	                                        'height': (self.status == 'collapsed') ? '260px' : '148px'
	                                },
	                                {
	                                        duraton: 'normal',
	                                        complete: function()
	                                        {
	                                                self.status = (self.status == 'collapsed') ? 'expanded' : 'collapsed';
	                                        }
	                                });

	                        $('.expanded-feature-list')
	                                .css('border-top', (self.status == 'collapsed') ? '1px solid #DDD' : '1px solid #ededed');
	                }
	        });
	});
$('#screenshots-container') 
.cycle({ 
    fx:     'scrollLeft', 
    speed:  '700', 
    timeout: 5500, 
    pager:  '#screenshotsnavigation' 
});
</script>
